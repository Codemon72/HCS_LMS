<section id="add" class="container">
  <div class="form-wrap">
    <h1>Add A Course</h1>
    {{#each errors}}
    <div class="error">
      <p>{{text}}</p>
    </div>
    {{/each}}
    <form action="/courses/add" method="POST">
      <div class="input-group">
        <label for="name">Course Name</label>
        <input 
        type="text" 
        name="name" 
        id="name" 
        class="input-box"
        placeholder="eg. HTML & CSS, Learn To Code, JavaScript For Web, React.js, ... " 
        maxlength="100"
        value={{name}}>
      </div>
      <div class="input-group">
        <label for="hours">Hours Total</label>
        <input 
        type="number" 
        name="hours" 
        id="hours" 
        class="input-box"
        placeholder="number" 
        maxlength="100"
        value={{hours}}>
      </div>
      <div class="input-group">
        <label for="start_date">Start Date</label>
        <input 
        type="text" 
        name="start_date"
        id="start_date" 
        class="input-box" 
        placeholder="format like: 2021-05-05"
        value={{start_date}}>
      </div>
      <div class="input-group">
        <label for="end_date">End Date</label>
        <input 
        type="text"
        name="end_date" 
        id="end_date" 
        class="input-box" 
        placeholder="format like: 2021-05-05"
        value={{end_date}}>
      </div>
      <div class="input-group">
        <label for="teacher_id">Teacher ID</label>
        <input 
        type="number"
        name="teacher_id" 
        id="teacher_id" 
        class="input-box" 
        placeholder="number"
        value={{teacher_id}}>
      </div>
      <input type="submit" value="Add Course" class="btn btn-reverse">
    </form>
  </div>
</section>
